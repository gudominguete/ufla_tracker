<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="botaoEntrarLogin">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_botao_entrar</item>
        <item name="android:text">@string/entrar</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextoTituloBold">
        <item name="android:fontFamily">@font/robotobold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="TextoTituloRegular">
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextoPerfil">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>
    <style name="FundoBackground">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#CCFFFFFF</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="TextoProgressBar">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:clickable">false</item>
    </style>
</resources>
