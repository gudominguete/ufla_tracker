<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="300dp"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/robotobold"
            android:textSize="14sp"
            android:text="Preencha os campos abaixo para realizar o seu cadastro"
            android:textColor="@color/loginPrincipalBG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Nome *"
            android:textColor="@color/loginPrincipalBG"
            android:fontFamily="@font/robotobold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edit_valor_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/texto_erro_nome"
            android:textColor="@color/red"
            android:text="O campo nome n達o foi preenchido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/loginPrincipalBG"
            android:fontFamily="@font/robotobold"
            android:text="Idade *"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edit_valor_idade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/texto_erro_idade"
            android:textColor="@color/red"
            android:text="O campo idade n達o foi preenchido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/loginPrincipalBG"
            android:fontFamily="@font/robotobold"
            android:text="Peso *"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:digits="0123456789,"
            android:inputType="numberDecimal"
            android:id="@+id/edit_valor_peso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/texto_erro_peso"
            android:textColor="@color/red"
            android:text="O campo peso n達o foi preenchido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/loginPrincipalBG"
            android:fontFamily="@font/robotobold"
            android:text="Altura *"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:digits="0123456789,"
            android:inputType="numberDecimal"
            android:id="@+id/edit_valor_altura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/texto_erro_altura"
            android:textColor="@color/red"
            android:text="O campo altura n達o foi preenchido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_cancelar"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:text="Cancelar"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <Button
                android:layout_weight="1"
                android:layout_gravity="right"
                android:id="@+id/btn_enviar"
                android:text="Enviar"
                android:backgroundTint="@color/loginPrincipalBG"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>