<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_recycle_dispositivos"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="5dp">

    <TextView
        android:paddingEnd="5dp"
        android:textColor="@color/loginPrincipalBG"
        android:fontFamily="@font/robotobold"
        android:id="@+id/label_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/robotoregular"
        android:id="@+id/conteudo_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/label_nome"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:paddingEnd="5dp"
        android:textColor="@color/loginPrincipalBG"
        android:fontFamily="@font/robotobold"
        android:id="@+id/label_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EndereÃ§o:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_nome" />

    <TextView
        android:fontFamily="@font/robotoregular"
        android:id="@+id/conteudo_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/label_endereco"
        app:layout_constraintTop_toBottomOf="@+id/conteudo_nome"/>

</androidx.constraintlayout.widget.ConstraintLayout>