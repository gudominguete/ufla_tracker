<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_recycle_dispositivos"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/imagem_bluetooth"
        android:src="@drawable/bluetooth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="11sp"
        android:paddingEnd="5dp"
        android:textColor="@color/loginPrincipalBG"
        android:fontFamily="@font/robotobold"
        android:id="@+id/label_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/imagem_bluetooth"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="11sp"
        android:fontFamily="@font/robotoregular"
        android:id="@+id/conteudo_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/text_conectar"
        app:layout_constraintStart_toEndOf="@+id/label_nome"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:textSize="11sp"
        android:paddingEnd="5dp"
        android:textColor="@color/loginPrincipalBG"
        android:fontFamily="@font/robotobold"
        android:id="@+id/label_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EndereÃ§o:"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/imagem_bluetooth"
        app:layout_constraintTop_toBottomOf="@+id/label_nome" />

    <TextView
        android:textSize="11sp"
        android:fontFamily="@font/robotoregular"
        android:id="@+id/conteudo_endereco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/text_conectar"
        app:layout_constraintStart_toEndOf="@+id/label_endereco"
        app:layout_constraintTop_toBottomOf="@+id/conteudo_nome"/>

    <TextView
        android:id="@+id/text_conectar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:text="Conectar"
        android:textAllCaps="true"
        android:textColor="@color/loginPrincipalBG"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>