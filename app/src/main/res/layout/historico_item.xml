<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_historico"
    android:id="@+id/layout_recycle_historico"
    android:layout_marginBottom="18dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp">
    <TextView
        android:id="@+id/label_nome_atividade_sem_valor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:paddingStart="15dp"
        android:paddingTop="30dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="Nome:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:id="@+id/label_nome_atividade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:paddingStart="5dp"
        android:paddingTop="30dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/label_data_historico"
        app:layout_constraintStart_toEndOf="@id/label_nome_atividade_sem_valor"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/label_tempo_atividade_sem_valor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:paddingStart="15dp"
        android:paddingTop="30dp"
        android:text="Tempo:"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_nome_atividade"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tempo_atividade_historico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:paddingStart="10dp"
        android:paddingTop="30dp"
        android:text="01:26"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/label_ver_mais"
        app:layout_constraintStart_toEndOf="@+id/label_tempo_atividade_sem_valor"
        app:layout_constraintTop_toBottomOf="@+id/label_nome_atividade" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/label_nome_atividade"
        android:id="@+id/label_data_historico"
        android:paddingTop="30dp"
        android:paddingEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/robotobold"
        android:text="01/02/2020"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/label_nome_atividade"
        android:id="@+id/label_ver_mais"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAlignment="viewEnd"
        android:fontFamily="@font/robotobold"
        android:text="@string/ver_mais"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>