<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.PerfilActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="23dp"
        android:paddingTop="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="Meu Perfil"
            android:textColor="@color/loginPrincipalBG"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/nome_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/robotobold"
        android:text="Gustavo Lopes Dominguete"
        android:textAlignment="center"
        android:textColor="@color/loginPrincipalBG"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button_layout" />

    <TextView
        android:id="@+id/atleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/robotoregular"
        android:text="Atleta"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_perfil" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_dados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/atleta">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/valor_peso"
            android:text="74kg"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/loginPrincipalBG"
            android:textSize="28sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:fontFamily="@font/robotoregular"
            android:text="Seu peso"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline3"
            app:layout_constraintTop_toBottomOf="@id/valor_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:background="@color/loginPrincipalBG"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
        <View
            android:background="#C4C4C4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline3"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            android:layout_width="1dp"
            android:layout_height="0dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/valor_altura"
            android:text="1,82m"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/loginPrincipalBG"
            android:textSize="28sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:fontFamily="@font/robotoregular"
            android:text="Seu altura"
            app:layout_constraintStart_toEndOf="@id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/valor_altura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/label_nome_perfil"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_dados"
        style="@style/TextoPerfil"
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_dados"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Gustavo Lopes Dominguete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextoPerfil"/>

    <View
        android:id="@+id/separator_nome"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/label_nome_perfil"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#C4C4C4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/label_idade_perfil"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_nome"
        style="@style/TextoPerfil"
        android:text="Idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/separator_nome"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="26 anos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextoPerfil"/>

    <View
        android:id="@+id/separator_idade"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/label_idade_perfil"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#C4C4C4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:id="@+id/label_email_perfil"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_idade"
        style="@style/TextoPerfil"
        android:text="E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/separator_idade"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="gudominguete@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextoPerfil"/>

    <View
        android:id="@+id/separator_email"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/label_email_perfil"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#C4C4C4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>