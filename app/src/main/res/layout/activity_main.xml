<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botao_graficos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graficos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botao_adicionar_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar registro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao_graficos" />

    <Button
        android:id="@+id/botao_historico_atividades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histórico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao_adicionar_registro" />

    <Button
        android:id="@+id/botao_conexao_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conexão bluetooth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao_historico_atividades" />


</androidx.constraintlayout.widget.ConstraintLayout>